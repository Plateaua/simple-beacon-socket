var scheme   = "<%= @scheme %>";
var uri      = scheme + window.document.location.host + "/";
var ws       = new WebSocket(uri);
var serviceToken = "defaultService";
var data     = {};
initializeWebSocket()


function reopenWebSocket(){
  if (ws == null) {
    uri      = scheme + window.document.location.host + "/";
    ws       = new WebSocket(uri);
    initializeWebSocket()    
  }
}

function initializeWebSocket(){

  ws.onmessage = function(message) {
    console.log(message)
    storeDatum(JSON.parse(message.data))
    $("#chat-text").html("");
    var filterdData = filterData()
    for (key in filterdData) {
      var datum = filterdData[key]
      $("#chat-text").append("<div class='panel panel-default'><div class='panel-heading'>" + key + "</div><div class='panel-body'>" + datum.detectedAt + "</br>" + datum.rssi  + "</br>" + datum.location + "</div></div>");
    }

    $("#chat-text").stop().animate({
      scrollTop: $('#chat-text')[0].scrollHeight
    }, 800);
  };

  ws.onopen = function(event){
    console.log("opened!!!!")    
  }

  ws.onclose = function(event){
    console.log("closed!!!!")
    ws = null;
    setTimeout("reopenWebSocket()", 3000);
  }
  ws.onerror = function(event){
    console.log("error!!!")
  }
}


$("#input-form").on("submit", function(event) {
  event.preventDefault();
  var handle = $("#input-handle")[0].value;
  var text   = $("#input-text")[0].value;
  ws.send(JSON.stringify({ handle: handle, text: text }));
  $("#input-text")[0].value = "";
});

var lastDatum;
function storeDatum(datum){
  lastDatum = datum
  var majorMinor = String(datum.major) + "-" + String(datum.minor)
  if (data[datum.serviceToken] == null){
    data[datum.serviceToken] = {}
  }
  data[datum.serviceToken][majorMinor] = datum
}

function filterData(){
  return data[serviceToken]
}